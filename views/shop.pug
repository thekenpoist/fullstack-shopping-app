doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/prodcut.css")
    body 
        header.main-header
            nav.main-header__nav 
                ul.main-header__item-list 
                    li.main-header__item 
                        a.active(href="/") Shop
                    li.main-header__item 
                        a(href="/admin/ad-product") Add Product

        main 
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card_header 
                            hi.product_title Great Book
                        div.card__image
                            img(src="/images/report.jpg", alt="Book")
                        div.card__content 
                            h2.product__price $19.99
                            p.product__description A very cool thing 
                        .card__actions 
                            button.bt Add to Cart
